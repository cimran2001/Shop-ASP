@using ShopASPNet.Models.Items
@model Item

@{
    ViewData["Title"] = "Edit item";
    Layout = "_Layout";
}

<h2>Edit item</h2>

@if (TempData["Error"] is not null) {
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
}

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <input asp-for="Created" hidden />
    
    <div class="mb-3">
        <label for="name" class="form-label">Name: </label>
        <input id="name" placeholder="Name" class="form-control"
               asp-for="Name"/>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description: </label>
        <textarea id="description" placeholder="Description" class="form-control" 
                   asp-for="Description"></textarea>
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price: </label>
        <input id="price" placeholder="Price" class="form-control"
               type="number" min="1" step="any"
               asp-for="Price"/>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a class="btn btn-danger-" asp-action="Index">Cancel</a>
    </div>
</form>

